# --
${1:$(arv/yas-sh-getopt-var-declaration yas-text)}
CMD_ARGS=

parse_command_line () {
    local opt
    local OPTIND
    while getopts "${1:opcions}" opt; do
        case $opt in
            ${1:$(arv/yas-sh-getopt-case-options yas-text)}
            h) echo "$USAGE"
               exit 0 ;;
            "?") echo "Parametre incorrecte: $@."
                 echo $USAGE
                 exit -1 ;;
        esac
    done
    shift $((OPTIND-1))
    CMD_ARGS="$@"
}

parse_command_line "$@"
$0
